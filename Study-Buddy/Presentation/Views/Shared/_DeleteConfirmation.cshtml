@model DeleteConfirmationViewModel;

@{
    Layout = "_Layout";
    string refererUrl = ViewBag.RefererUrl;
}

@if (ViewData["ErrorMessage"] != null)
{
    <div id="error-alert" class="alert alert-danger">@ViewData["ErrorMessage"]</div>
}

<div class="container">
    <h1>Confirm Deletion</h1>
    <p>Are you sure you want to delete this @Model.EntityName?</p>

    <form asp-controller="@Model.Controller" asp-action="@Model.Action" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@refererUrl" class="btn btn-secondary">Go Back</a>
    </form>
</div>
